- content_for :canonical_url do
  %link{href: @canonical_url, rel: 'canonical'}

- breadcrumb @breadcrumb_name, @twitter_user.screen_name

- title @page_title
- set_meta_tags description: @meta_description

= render(partial: 'profiles/overview', locals: {user: @twitter_user, unique_id: @twitter_user.uid})

%h2.h2.page-title= @page_title

.page-description.text-center.score-wrapper= @page_description

= render partial: 'gauge', locals: {score: @score}

.tweet-box-wrapper{style: 'margin-bottom: 15px;'}
  = render(partial: 'twitter/tweet_box', locals: {text: strip_tags(@tweet_text)})

- @screen_names.each do |screen_name|
  = link_to t('searches.common.search_by', user: mention_name(screen_name)), searches_path(screen_name: screen_name, redirect_path: score_path(screen_name: screen_name)), class: 'btn btn-default btn-md', method: :post

= render(partial: 'common/adsense', locals: {action: action_name, vertical: :top})

.gray-separator

- if @stat
  = render partial: 'usage_stats/friends_stat', locals: {stat: @stat.friends_stat, twitter_user: @twitter_user, url: @canonical_url}
  .gray-separator
  = render partial: 'usage_stats/tweets_stat', locals: {stat: @stat.tweets_stat, twitter_user: @twitter_user, url: @canonical_url}
  .gray-separator

= render partial: 'common/share_more', locals: {text: t('common.show.let_me_know_html', user: @twitter_user.mention_name, current: t('.title'))}

.gray-separator

= render partial: 'common/search_more', locals: {twitter_user: @twitter_user, text: t('common.show.plese_use_egotter', current: t('.title'))}

.gray-separator

= render partial: 'common/related_pages', locals: {twitter_user: @twitter_user}