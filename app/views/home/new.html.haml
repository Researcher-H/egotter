- if request.from_pc? && !user_signed_in?
  .row.text-center.searches{style: 'margin-top: 15px;'}
    .col-md-6.col-md-push-6
      .visible-md-block.visible-lg-block{style: 'height: 15px; width: 100%;'}
      %h3.h4{style: 'margin-top: 15px; margin-bottom: 15px;'}= t('searches.new.pc.lead_001')
      .lead= t('searches.new.pc.lead_002_html')
      %div{style: 'height: 30px; width: 100%;'}
      .text-notice
        %i.fa.fa-check.fa-lg{'aria-hidden': true}
        = t('searches.new.pc.check_001')
      .text-notice
        %i.fa.fa-check.fa-lg{'aria-hidden': true}
        = t('searches.new.pc.check_002')
      %div{style: 'margin-top: 5px;'}
        = link_to t('searches.new.pc.sign_up'), sign_in_path(via: build_via('button/pc_special')), class: 'btn btn-info btn-block btn-lg box-center'
      %div{style: 'height: 30px; width: 100%;'}
      %div= t('searches.new.pc.search_for_now')
      .box-center{style: 'margin-top: 5px;'}
        = render partial: 'common/search_form', locals: {via: build_via('input/pc_special')}
      .hidden-md-block.hidden-lg-block{style: 'height: 30px; width: 100%;'}
    .col-md-6.col-md-pull-6
      = search_link 'ego_tter', build_via('big_icon') do
        = image_tag '/egotter_icon_400x400.jpg', size: '400x400', class: 'img-rounded', style: 'padding: 10px; border: 15px solid #f5f5f5'
- else
  .text-center.searches
    %h3.h4= t('searches.new.lead_001')
    .lead= t('searches.new.lead_002_html')
    = render partial: 'common/search_form', locals: {via: build_via('input')}
    = render(partial: 'adsense/side_by_side', locals: {vertical: :top})
    - if user_signed_in?
      = render partial: 'common/search_button', locals: {screen_name: current_user.screen_name, via: build_via('top_button')}
    - else
      = link_to t('login.welcome.sign_in_with_twitter'), welcome_path(via: build_via('button')), class: 'btn btn-info btn-block'
      .text-notice
        %i.fa.fa-check.fa-lg{'aria-hidden': true}
        = t('searches.new.pc.check_001')
      .text-notice
        %i.fa.fa-check.fa-lg{'aria-hidden': true}
        = t('searches.new.pc.check_002')

