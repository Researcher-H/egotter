- wrapper_tag ||= 'textarea'

%div{id: "text-#{text.object_id}"}
  -# textarea
  .tweet-preview-box.p-2
    - if wrapper_tag == 'textarea'
      %textarea.textarea{readonly: 'readonly', rows: [text.scan(/\R/).size + 3, 6].max}= text
    - else
      .textarea= text.gsub("\n", '<br>').html_safe

  -# buttons
  .tweet-box.text-right
    = link_to t('.copy'), '#', class: 'btn btn-outline-primary btn-copy'
    = link_to t('.tweet'), '#', class: 'btn btn-primary btn-tweet'

:javascript
  $(function () {
    function openWindow(text) {
      var url = 'https://twitter.com/intent/tweet?text=' + encodeURIComponent(text);
      window.open(url, 'TwitterWindow', 'width=650, height=450, menubar=no, toolbar=no, scrollbars=yes');
    }

    var eventCategory = '#{controller_name}##{action_name}';
    var twitterUser = {
      userId: '#{current_user&.id}',
      uid: '#{twitter_user.uid}',
      screenName: "#{twitter_user.screen_name}"
    };
    var container = $('#text-#{text.object_id}');
    var textarea = container.find('.textarea');

    // Click textarea
    textarea.on('click', function () {
      $(this).select();

      ga('send', {
        hitType: 'event',
        eventCategory: eventCategory,
        eventAction: 'Textarea clicked',
        eventLabel: JSON.stringify(twitterUser)
      });
    });

    // Click copy button
    container.find('.btn-copy').on('click', function () {
      openWindow(textarea.val() || textarea.text());

      ga('send', {
        hitType: 'event',
        eventCategory: eventCategory,
        eventAction: 'Copy button clicked',
        eventLabel: JSON.stringify(twitterUser)
      });

      return false;
    });

    // Click tweet button
    container.find('.btn-tweet').on('click', function () {
      openWindow(textarea.val() || textarea.text());

      ga('send', {
        hitType: 'event',
        eventCategory: eventCategory,
        eventAction: 'Tweet button clicked',
        eventLabel: JSON.stringify(twitterUser)
      });

      return false;
    });
  });
