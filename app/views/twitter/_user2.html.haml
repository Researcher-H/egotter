.media.col-xs-12.col-sm-6.col-md-4{style: 'border: none; margin: 0px; padding: 0; padding-right: 15px; padding-bottom: 15px;'}
  .media-inner{style: 'height: 140px; padding: 15px; border: 1px solid #e6e6e6; overflow: hidden;'}
    .media-left
      = link_to timeline_path(screen_name: user.screen_name) do
        = normal_icon_img(user, class: 'media-object')
    .media-body
      %h4.media-heading= user_name(user, label: true)
      %span.screen-name
        = link_to(mention_name(user.screen_name), timeline_path(screen_name: user.screen_name))
    .description= user.description