- user = tweet.user
.col-xs-12{style: 'margin-bottom: 15px;'}
  .media
    .media-inner
      .media-left
        = link_to timeline_path(screen_name: user.screen_name) do
          = normal_icon_img(user, class: 'media-object img-rounded')
      .media-body
        %h4.media-heading= user_name(user)
        %span.screen-name= link_to(mention_name(user.screen_name), timeline_path(screen_name: user.screen_name))
      .media-right.created-at= tweet_link(tweet)
      .tweet-text= linkify(tweet.text)
