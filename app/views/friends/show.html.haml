- content_for :canonical_url do
  %link{href: friend_url(screen_name: @twitter_user.screen_name, type: @type), rel: 'canonical'}

- breadcrumb :friend, @twitter_user.screen_name

- page_title = t('friends.show.title', user: @twitter_user.mention_name, friends: @twitter_user.friends_count, followers: @twitter_user.followers_count, statuses: @twitter_user.statuses_count)
- title page_title
- set_meta_tags description: t('friends.show.description', user: @twitter_user.mention_name, friends: @twitter_user.friends_count, followers: @twitter_user.followers_count, statuses: @twitter_user.statuses_count)

= render(partial: 'profiles/overview', locals: {user: @twitter_user, unique_id: @twitter_user.uid})

:javascript
  $(function () {
    enableSlickOnPageTop();
  });

%h2.h2.friends= page_title

.friends.lead.text-center= t('friends.show.lead_002', user: @twitter_user.mention_name).html_safe

= render partial: 'common/search_form', locals: {via: 'friends/show/top_input'}
= render(partial: 'common/adsense', locals: {action: action_name, vertical: :top})

= render partial: 'friends/show/present', locals: {twitter_user: @twitter_user, type: @type}
.friends.separator
= render partial: 'common/related_pages', locals: {twitter_user: @twitter_user}