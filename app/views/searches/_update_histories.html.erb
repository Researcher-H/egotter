<% update_histories.each_with_index do |uh, i| %>
  <div class="media" style="border-bottom: 1px solid #e6e6e6; padding-bottom: 15px;">
    <div class="media-body" style="padding-right: 15px;">
      <h4 style="font-weight: bold; font-size: 14px;" class="media-heading"><%= i + 1 %></h4>
      <span style="display: block; font-size: 13px; color: #999999;"><%= uh.created_at %></span>
      <span style="display: block; font-size: 13px; color: #999999;"><%= uh.updated_at %></span>
    </div>
  </div>
<% end %>