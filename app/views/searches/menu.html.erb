<div class="menu container">
  <h2><small><%= t('dictionary.search_login_user') %></small></h2>
  <div class="container">
    <%= link_to t('dictionary.search_by', user: "@#{current_user.screen_name}"),
                searches_path(screen_name: current_user.screen_name),
                class: 'btn btn-lg btn-info btn-block', method: :post %>
  </div>

  <hr>

  <div class="container">
    <%= form_tag menu_path, method: :post do %>
      <h2><small><%= t('dictionary.notification_settings') %></small></h2>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="notification" style="margin-top: 12px;" <%= 'checked' if current_user.notification? %>>
          <div><%= t('dictionary.notification_description') %></div>
        </label>
      </div>
      <button style="margin-top: 10px;" class="btn btn-default btn-block" type="submit"><%= t('dictionary.save_settings') %></button>
    <% end %>
  </div>

  <hr>

  <h2><small><%= t('search_menu.search_histories') %></small></h2>
  <div class="container">
    <%= render(partial: 'searches/adsense') %>
  </div>

  <%# Calling dup to change object_id %>
  <%= render(partial: 'searches/search_histories', locals: {search_histories: @search_histories.dup, in_modal: false}) %>

  <% if current_user.admin? %>
    <h2><small><%= t('search_menu.debug') %></small></h2>
    <div class="container">
      <%= link_to t('search_menu.debug'), debug_path,
                  class: 'btn btn-lg btn-info btn-block', style: 'margin-bottom: 15px;' %>
    </div>

    <h2><small><%= t('search_menu.clear_result_cache') %></small></h2>
    <div class="container">
      <%= link_to t('search_menu.clear_result_cache'), clear_result_cache_path,
                  class: 'btn btn-lg btn-info btn-block', style: 'margin-bottom: 15px;', method: :post %>
    </div>
  <% end %>
</div>