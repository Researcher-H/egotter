          graph_option.drilldown.series = <%= raw usage_stats[:graph][1].to_json %>;
          graph_option.yAxis.visible = false;
          $('#<%= usage_stats.object_id %>').highcharts(graph_option);
        });
      </script>
    <% end %>
  </div>

  <div class="container">
    <%= link_to(t('dictionary.view_more'),
