<div class="menu-items media" style="position: relative;">
  <%= link_to search_path_for(name, tu.screen_name), class: 'result-link' do %>
    <h3 class="h4"><%= title_for(name, tu.screen_name) %></h3>
    <div class="text-center description"><%= description_for(name, tu.screen_name).html_safe %></div>
  <% end %>

  <div style="position: absolute; bottom: 15px; left: 15px; right: 15px;">
    <div class="media-body">
      <div id="<%= graph.object_id %>" style="height: 120px;"></div>
      <script>
        $(function () {
          var graph_option = $.extend(true, {}, window.usage_stats_column_chart_options);
          graph_option.series[0].data = <%= raw graph.to_json %>;
          graph_option.yAxis.visible = false;
          $('#<%= graph.object_id %>').highcharts(graph_option);
        });
      </script>
    </div>

    <%= link_to(t('dictionary.view_more'), search_path_for(name, tu.screen_name), class: 'btn btn-info btn-block btn-view-more') %>
  </div>
</div>
