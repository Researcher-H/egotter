- redirect_path ||= ''

%h1.h3
  = image_tag '/logo_96x96.png', size: '48x48', alt: header
  = header

%h2.h5.my-4= subheader
.mb-3= lead

= sign_in_with_twitter_link(redirect_path, 'button', class: 'btn btn-primary btn-block')
.egotter-pink.text-right
  %i.fas.fa-check
  = t('.check_001')
.egotter-pink.text-right
  %i.fas.fa-check
  = t('.check_002')

.mt-3.mb-4
  %span.thin-border
  %span.or-text= t('.or')
  %span.thin-border

= render partial: 'shared/search_form', locals: {via: current_via('input'), redirect_path: redirect_path}
.egotter-pink.text-right
  %i.fas.fa-check
  = t('.check_003')
.egotter-pink.text-right.search-count-wrapper{style: 'visibility: hidden;'}
  %i.fas.fa-check
  = t('.check_004_html')

%h2.h5.mt-5.mb-3= t('.lead_003_html')

.screenshot.text-center
  = link_to sign_in_path(via: current_via('screenshots')) do
    %img{alt: '', src: image_path('/screenshot_laptop_iphone_1000x548.gif'), height: '160px'}

%div.my-4= t('.text003_html')

= sign_in_with_twitter_link(redirect_path, 'screenshots_button', class: 'btn btn-primary btn-block')
.egotter-pink.text-right
  %i.fas.fa-check
  = t('.check_005')
.egotter-pink.text-right
  %i.fas.fa-check
  = t('.check_006')
