<script src="https://cdnjs.cloudflare.com/ajax/libs/airbrake-js/1.6.7/client.min.js" integrity="sha512-+hDhCwgl4aO66eAZnM+FQfYIVXhm39PouUE8feIFNfad6to0RDD9hASTD6s8AZWY/4YCnhDDAMLZg2D2DhRmYA==" crossorigin="anonymous"></script>
<script>
    var airbrake = new airbrakeJs.Client({
        projectId: 1,
        projectKey: "<%= ENV['AIRBRAKE_PROJECT_KEY'] %>",
        host: "<%= ENV['AIRBRAKE_HOST'] %>"
    });

    airbrake.addFilter(function (notice) {
        notice.context.environment = "<%= Rails.env %>";
        notice.context.component = "JS";
        notice.params = {
            user_id: '<%= user_signed_in? ? current_user.id : -1 %>',
            uid: '<%= user_signed_in? ? current_user.uid : -1 %>',
            screen_name: '<%= user_signed_in? ? current_user.screen_name : '' %>',
            os: '<%= request.os %>',
            device_type: '<%= request.device_type %>',
            browser: '<%= request.browser %>',
            browser_version: '<%= request.browser_version %>'
        };
        return notice;
    });

    window.airbrake = airbrake;
</script>
