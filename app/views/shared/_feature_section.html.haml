.container
  .row
    .col-12.col-md-8.mx-auto
      %h2.h4.text-center.my-5= title
      = image_tag image, class: 'img-rounded d-block mx-auto', height: '250px'
      .my-5
        = description
        - if note
          .text-muted= note
      .small-tips.text-center.mx-auto{style: 'width: 300px;'}
        = link
        - check = [check] unless check.class == Array
        - check.each do |chk|
          .egotter-pink.text-right
            %i.fas.fa-check.small
            %span.small= chk
