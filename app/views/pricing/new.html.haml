%h3.text-center= t('.names.basic')
.vertical-spacing

%table.pricing-table.table.table-bordered
  %tbody
    %tr
      %td= t('.pricing.key')
      %td= t('.pricing.basic')
    %tr
      %td= t('.audience.key')
      %td= t('.audience.basic')
    %tr
      %td= t('.search_count.key')
      %td.text-primary= t('.search_count.basic', count: Rails.configuration.x.constants['basic_plan_search_histories_limit'])
    %tr
      %td= t('.follow_requests.key')
      %td.text-primary= t('.follow_requests.basic_html', count: Rails.configuration.x.constants['basic_plan_follow_requests_limit'])
    %tr
      %td= t('.unfollow_requests.key')
      %td.text-primary= t('.unfollow_requests.basic_html', count: Rails.configuration.x.constants['basic_plan_unfollow_requests_limit'])
    %tr
      %td= t('.remove_notification.key')
      %td= t('.remove_notification.basic_html')
    %tr
      %td= t('.private_account.key')
      %td= t('.private_account.basic_html')
    %tr
      %td
      %td= t('.money_back_guarantee')
    %tr
      %td
      %td
        - if user_signed_in?
          - if current_user.is_subscribing?
            .btn.btn-primary{disabled: 'disabled'}= t('.has_purchased')
          - else
            = render partial: 'stripe/purchase_button'
        - else
          = link_to t('common.show.sign_in'), sign_in_path(via: build_via('pricing_buy')), class: 'btn btn-primary'

.vertical-spacing
.vertical-spacing

%h3.text-center= t('.names.enterprice')
.vertical-spacing

%table.pricing-table.table.table-bordered
  %tbody
    %tr
      %td= t('.pricing.key')
      %td= t('.pricing.enterprice')
    %tr
      %td= t('.delivery_date.key')
      %td= t('.delivery_date.enterprice')
    %tr
      %td= t('.purchasing_method.key')
      %td= t('.purchasing_method.enterprice')
    %tr
      %td
      %td= t('.enterprice_description')
    %tr
      %td
      %td= link_to t('.enterprice_inquiry'), direct_message_url(User::EGOTTER_UID), class: 'btn btn-primary'

.clearfix

