<div class="table twitter_users"><%= image_tag '/ajax-loader.gif' %></div>
<div class="table friends"><%= image_tag '/ajax-loader.gif' %></div>
<div class="table followers"><%= image_tag '/ajax-loader.gif' %></div>

<script>
  function fetch_table(url){
    $.get(url).done(function(res){
      $.each(['twitter_users', 'friends', 'followers'], function(i, elem){
        draw_table(res[elem], elem, '.' + elem);
      });
    }).fail(function (xhr) {
      console.log(xhr.responseText)
    });
  }

  function draw_table(series, title, selector){
    var conf = $.extend(true, {}, window.kpis.config_stacked);
    conf.title.text = title;
    conf.series = series;
    $(selector).empty().highcharts(conf);
  }

  $(function () {
    fetch_table("<%= kpis_table_path %>");
  });
</script>
