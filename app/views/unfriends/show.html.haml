- content_for :canonical_url do
  %link{href: @canonical_url, rel: 'canonical'}

- breadcrumb @breadcrumb_name, @twitter_user.screen_name

- title @page_title
- set_meta_tags description: @meta_description, title: @meta_title

= render partial: 'common/background_update_components', locals: {twitter_user: @twitter_user, jid: @jid}

= render(partial: 'profiles/overview', locals: {user: @twitter_user, unique_id: @twitter_user.uid})

%h2.h2.page-title= @page_title

.page-description.text-center= @page_description

.tweet-box-wrapper{style: 'margin-bottom: 15px;'}
  = render(partial: 'twitter/tweet_box', locals: {text: @tweet_text})

= render(partial: 'common/adsense', locals: {action: action_name, vertical: :top})

= render partial: 'close_friends/users', locals: {twitter_user: @twitter_user, api_path: @api_path}

= render(partial: 'common/adsense', locals: {action: action_name, vertical: :middle})

.gray-separator

- labels = [t('unfriends.show.see_unfriends_html', num: @twitter_user.unfriendships.size), t('unfriends.show.see_unfollowers_html', num: @twitter_user.unfollowerships.size), t('unfriends.show.see_blocking_or_blocked_html', num: @twitter_user.blocking_or_blocked_uids.size)]
- urls = [unfriend_path(screen_name: @twitter_user.screen_name, type: 'removing'), unfollower_path(screen_name: @twitter_user.screen_name), blocking_or_blocked_path(screen_name: @twitter_user.screen_name)]
= render partial: 'common/related_buttons', locals: {labels: labels, urls: urls, disabled: @disabled_label}

.gray-separator

= render partial: 'common/share_more', locals: {text: t('common.show.let_me_know_html', user: @twitter_user.mention_name, current: t("#{controller_name}.#{action_name}.title"))}

.gray-separator

= render partial: 'common/search_more', locals: {twitter_user: @twitter_user, text: t('common.show.plese_use_egotter', current: t("#{controller_name}.#{action_name}.title"))}

.gray-separator

= render partial: 'common/related_pages', locals: {twitter_user: @twitter_user}