- content_for :canonical_url do
  %link{href: unfriend_url(screen_name: @twitter_user.screen_name, type: @type), rel: 'canonical'}

- description = t('unfriends.show.description', user: @twitter_user.mention_name, removing: @twitter_user.removing.size, removed: @twitter_user.removed.size, blocking_or_blocked: @twitter_user.blocking_or_blocked.size)
- title t('unfriends.show.title', user: @twitter_user.mention_name)
- set_meta_tags description: description

= render(partial: 'profiles/overview',
  locals: {user: @twitter_user, unique_id: @twitter_user.uid})

:javascript
  $(function () {
    enableSlickOnPageTop('#{@twitter_user.uid}');
  });

%h2.h2.unfriends= description

.unfriends.lead.text-center= t('unfriends.show.lead_002', user: @twitter_user.mention_name).html_safe

= render partial: 'unfriends/search_form', locals: {via: 'unfriends/show/top_input'}
= render(partial: 'common/adsense', locals: {action: action_name, vertical: :top})

- if @twitter_user.too_many_friends?(login_user: current_user, context: :search)
  = render partial: 'unfriends/show/empty', locals: {twitter_user: @twitter_user}
- else
  = render partial: 'unfriends/show/present', locals: {twitter_user: @twitter_user, type: @type, description: description}