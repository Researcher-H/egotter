%footer.footer
  .container
    - spaces = '&nbsp;'.html_safe

    = succeed spaces do
      %a{href: root_path}= t('footer.titles.root')
      %br.visible-xs-block

    = succeed spaces do
      %a{href: one_sided_friends_top_path(via: build_via('footer'))}= t('one_sided_friends.new.footer_title')
      %br.visible-xs-block

    = succeed spaces do
      %a{href: unfriends_top_path(via: build_via('footer'))}= t('unfriends.new.footer_title')
      %br.visible-xs-block

    = succeed spaces do
      %a{href: inactive_friends_top_path(via: build_via('footer'))}= t('inactive_friends.new.footer_title')
      %br.visible-xs-block

    = succeed spaces do
      %a{href: clusters_top_path(via: build_via('footer'))}= t('clusters.new.footer_title')
      %br.visible-xs-block

    = succeed spaces do
      %a{href: tokimeki_unfollow_top_path(via: build_via('footer'))}= t('tokimeki_unfollow.new.footer_title')
      %br.visible-xs-block

    = succeed spaces do
      %a{href: delete_tweets_path(via: build_via('footer'))}= t('delete_tweets.new.footer_title')
      %br

    = succeed spaces do
      - if user_signed_in?
        = link_to t('dictionary.sign_out'), goodbye_path(via: build_via('footer'))
      - else
        = link_to t('dictionary.sign_in'), sign_in_path(via: build_via('footer'))
      %br.visible-xs-block

    = succeed spaces do
      %a{href: 'https://twitter.com/ego_tter', target: '_blank'}= t('footer.feedback')
      %br.visible-xs-block

    - if user_signed_in?
      = succeed spaces do
        = link_to t('settings.title'), settings_path
        %br.visible-xs-block

    = succeed spaces do
      %a{href: user_url('ego_tter'), target: '_blank'}= t('dictionary.official_account')
      %br.visible-xs-block

    = succeed spaces do
      = link_to t('searches.common.support'), support_path
      %br.visible-xs-block

    = succeed spaces do
      %a{href: 'https://github.com/ts-3156/egotter', target: '_blank'}= t('searches.common.github')
      %br.visible-xs-block

    = succeed spaces do
      = link_to t('misc.terms_of_service.title'), terms_of_service_path
      %br.visible-xs-block

    = succeed spaces do
      = link_to t('misc.privacy_policy.title'), privacy_policy_path
      %br

    = succeed spaces do
      = link_to t('misc.specified_commercial_transactions.title'), specified_commercial_transactions_path
      %br.visible-xs-block

    = succeed spaces do
      = link_to t('pricing.new.plans'), pricing_path(via: build_via('footer'))
      %br.visible-xs-block

    = succeed spaces do
      = link_to t('directory.profiles.footer_title'), directory_profile_path
      %br.visible-xs-block

    = succeed spaces do
      = link_to t('directory.timelines.footer_title'), directory_timeline_path
      %br

    %span.copy &copy; 2019 EGOTTER

    - if user_signed_in? && current_user.admin?
      #global-sneak-error-message
