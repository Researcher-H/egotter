- via = current_via('navbar')

%ul#orig-navbar.m-0.p-3
  %li
    = link_to root_path(via: via) do
      %img.rounded{alt: "", height: "30", src: image_path('/logo_96x96.png')}
  %li
    - text = content_for?(:navbar_title) ? yield(:navbar_title) : t('.title')
    = link_to text, root_path_for(controller: controller_name), class: 'text-white pl-2'

  %li.d-none.d-md-block.right-item
    = link_to '#', class: 'btn btn-primary', 'data-target' => '#search-modal', 'data-toggle' => 'modal' do
      %i.fas.fa-search.pr-1
      = t('.search_by_twitter_id')
  %li.d-none.d-md-block
    = link_to t('.pricing'), pricing_path(via: via), class: 'text-white pl-3'
  %li.d-none.d-md-block
    = link_to t('.notification'), start_path(anchor: 'notification', via: via), class: 'text-white pl-3'
  %li.d-none.d-md-block
    - if user_signed_in?
      = link_to mention_name(current_user.screen_name), settings_path(via: via), class: 'text-white pl-3'
    - else
      = link_to t('.sign_in'), sign_in_path(via: via, redirect_path: root_path_for(controller: controller_name)), class: 'text-white pl-3'

  -# Display on extra small and small
  %li.d-block.d-md-none.right-item
    = link_to '#', class: 'text-white', 'data-target' => '#search-modal', 'data-toggle' => 'modal' do
      %i.fas.fa-search
  %li.d-block.d-md-none
    - if user_signed_in?
      = link_to '#', class: 'text-white pl-3' do
        %i.fas.fa-bars.btn-sidemenu
        = render partial: 'layouts/sidemenu'
    - else
      = link_to t('.sign_in'), sign_in_path(via: via, redirect_path: root_path_for(controller: controller_name)), class: 'text-white pl-3'
