#navbar-hamburger.collapse.navbar-collapse
  .navbar-form.navbar-center.visible-md-block.visible-lg-block
    .form-group.has-feedback.has-search
      %span.glyphicon.glyphicon-search.form-control-feedback
      %input.form-control{placeholder: 'Search', type: 'text', 'data-target' => '.search-modal', 'data-toggle' => 'modal', readonly: true}

  %ul.nav.navbar-nav

  %ul.nav.navbar-nav.navbar-right
    - if user_signed_in?
      - if request.from_smartphone?
        %li
          = link_to '#', class: 'disabled' do
            %i.fa.fa-twitter{'area-hidden': true}
            = mention_name(current_user.screen_name)
        %li
          = link_to notifications_path do
            %span.glyphicon.glyphicon-bell
            = t('notifications.title')
        %li
          %a{href: '#', 'data-target' => '.search-modal', 'data-toggle' => 'modal'}
            %span.glyphicon.glyphicon-search
            = remaining_count_text
      - else
        %li
          %p.navbar-btn{style: 'margin-right: 15px;'}
            = link_to notifications_path, class: 'btn btn-default' do
              %span.glyphicon.glyphicon-bell
              = t('notifications.title')
    - else
      - if request.from_smartphone?
        %li
          = link_to t('dictionary.sign_in'), welcome_path(via: build_via('header'))
        %li
          %a{href: '#', 'data-target' => '.search-modal', 'data-toggle' => 'modal'}
            %span.glyphicon.glyphicon-search
            = remaining_count_text
      - else
        %li
          %p.navbar-btn{style: 'margin-right: 15px;'}
            = link_to t('dictionary.sign_in'), welcome_path(via: build_via('header')), class: 'btn btn-default'

    - if user_signed_in?
      - if request.from_smartphone?
        %li
          = link_to settings_path do
            %span.glyphicon.glyphicon-cog
            = t('settings.title')
      - else
        %li.dropdown
          %button.navbar-toggle{style: 'display: inline-block; margin-right: 0;', 'aria-expanded' => 'false', 'data-target' => '.dropdown', 'data-toggle' => 'dropdown', type: 'button'}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %ul.dropdown-menu
            %li
              %span{style: 'padding: 3px 20px;'}
                %i.fa.fa-twitter{'area-hidden': true}
                = mention_name(current_user.screen_name)
            %li.divider{role: 'separator'}
            %li
              = link_to settings_path do
                %span.glyphicon.glyphicon-cog
                = t('settings.title')
