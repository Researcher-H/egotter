  <link rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon-152x152.png" />

  <%= display_meta_tags description: t('dictionary.lead'), site: t('dictionary.title'), reverse: true,
                        og: {title: :title, type: (action_name == 'new' ? 'website' : 'article'), url: request.original_url,
                             image: 'http://egotter.com/egotter_kuma_840_450.png', site_name: :site, description: :description, locale: 'ja_JP'} %>

  <meta name="twitter:card" content="summary_large_image">
