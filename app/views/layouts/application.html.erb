    ga('create', 'UA-13072051-3', 'auto');
    ga('send', 'pageview');

  </script>

  <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
  <script>
    (adsbygoogle = window.adsbygoogle || []).push({
      google_ad_client: "ca-pub-3146843071247817",
      enable_page_level_ads: true
    });
  </script>
</head>
<body>

<style type="text/css">
  @media (min-width: 768px) {
    .navbar > .container .navbar-brand {
      margin-left: 0;
    }
  }
</style>
<nav class="navbar navbar-default">
  <div class="container">
    <div class="row">
      <div class="hidden-xs col-sm-1 col-md-2 col-lg-2"></div>
      <div class="col-xs-12 col-sm-10 col-md-8 col-lg-8">

        <div class="navbar-header">
          <% unless show_maintenance_page? %>
            <button type="button" class="search-modal-btn navbar-toggle" data-toggle="modal" data-target=".search-modal">
              <span class="search-modal-icon glyphicon glyphicon-search"></span><br>
              <span class="search-modal-text"><%= t('dictionary.search') %></span>
            </button>

            <button type="button" class="menu-btn navbar-toggle">
              <%= link_to menu_path do %>
                <span class="menu-icon glyphicon glyphicon-menu-hamburger"></span><br>
                <span class="menu-text"><%= t('dictionary.menu') %></span>
              <% end %>
            </button>

            <% unless user_signed_in? %>
              <button type="button" class="welcome-btn navbar-toggle">
                <%= link_to welcome_path do %>
                  <span class="welcome-icon glyphicon glyphicon-log-in"></span><br>
                  <span class="welcome-text"><%= t('dictionary.sign_in') %></span>
                <% end %>
              </button>
            <% end %>
          <% end %>

          <a class="navbar-brand" href="/">
            <img alt="<%= t('dictionary.app_name') %>" width="48" height="48" src="/logo_294_294.png">
            <span><%= t('dictionary.app_name') %></span>
          </a>
        </div>

        <% unless show_maintenance_page? %>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
              <% unless user_signed_in? %>
                <li>
                  <div class="welcome-btn">
                    <%= link_to welcome_path do %>
                      <span class="welcome-icon glyphicon glyphicon-log-in"></span><br>
                      <span class="welcome-text"><%= t('dictionary.sign_in') %></span>
                    <% end %>
                  </div>
                </li>
              <% end %>
              <li>
                <div class="menu-btn">
                  <%= link_to menu_path do %>
                    <span class="menu-icon glyphicon glyphicon-menu-hamburger"></span><br>
                    <span class="menu-text"><%= t('dictionary.menu') %></span>
                  <% end %>
                </div>
              </li>
              <li>
                <div class="search-modal-btn" data-toggle="modal" data-target=".search-modal">
                  <span class="search-modal-icon glyphicon glyphicon-search"></span><br>
                  <span class="search-modal-text"><%= t('dictionary.search') %></span>
                </div>
              </li>
            </ul>
          </div>
        <% end %>

      </div>
      <div class="hidden-xs col-sm-1 col-md-2 col-lg-2"></div>
    </div>
  </div><!-- /.container -->
</nav>

<% unless show_maintenance_page? %>
<div class="modal fade search-modal" tabindex="-1" role="dialog" aria-labelledby="search-modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="search-modal-label"><%= t('dictionary.search_by_egotter') %></h4>
      </div>
      <div class="modal-body">
        <%= form_tag searches_path, method: :post do %>
          <%= render partial: 'searches/search_box_group' %>
        <% end %>

        <div class="modal-search-histories">
          <hr style="display: none;">
          <h2 style="display: none;"><small><%= t('search_menu.search_histories') %></small></h2>
        </div>
        <script>
          $(function () {
            $.get('<%= search_histories_path %>', {in_modal: true})
                .done(function (res) {
                  if (res.status == 200) {
                    var container = $('.modal-search-histories');
                    container.find('hr').show();
                    container.find('h2').show();
                    container.append(res.html);
                  }
                })
                .fail(function (xhr) {
                  console.log(xhr.responseText);
                });
          });
        </script>
      </div>
    </div>
  </div>
</div>
<% end %>

<% if notice %>
  <p class="alert alert-info"><%= raw notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-warning"><%= raw alert %></p>
<% end %>

<div class="container">
  <div class="row">
    <div class="hidden-xs col-sm-1 col-md-2 col-lg-2"></div>
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-8">
      <%= yield %>
    </div>
    <div class="hidden-xs col-sm-1 col-md-2 col-lg-2"></div>
  </div>
</div>

<% unless show_maintenance_page? %>
<footer class="footer">
  <div class="container">
    <p class="text-muted">
      <a href="/">トップページ</a>&nbsp;&nbsp;
      <% if user_signed_in? %>
        <%= link_to t('dictionary.sign_out'), sign_out_path, data: {confirm: t('dictionary.realy_sign_out')} %>&nbsp;&nbsp;
      <% else %>
        <%= link_to t('dictionary.sign_in'), welcome_path %>&nbsp;&nbsp;
      <% end %>
      <a href="/">ご意見</a>&nbsp;&nbsp;
      <% if user_signed_in? %>
        <%= link_to t('dictionary.menu'), menu_path %>&nbsp;&nbsp;
      <% end %>
      <a href="https://twitter.com/ego_tter" target="_blank"><%= t('dictionary.official_account') %></a>&nbsp;&nbsp;
      <%= link_to t('dictionary.support'), support_path %>&nbsp;&nbsp;
      <a href="https://github.com/ts-3156/egotter" target="_blank">Github</a>&nbsp;&nbsp;
      <%= link_to t('dictionary.terms_of_service'), terms_of_service_path %>&nbsp;&nbsp;
      <%= link_to t('dictionary.privacy_policy'), privacy_policy_path %>
    </p>
    <% if admin_signed_in? %>
      <p class="text-muted">
        <% if action_name.in?(%w(show)) %><span>time=<!-- search_elapsed_time --></span>&nbsp;&nbsp;<% end %>
        <% if action_name.in?(%w(new show)) %>ttl=<span><!-- cache_ttl --></span>&nbsp;&nbsp;<% end %>
        <% if under_maintenance? %><span><%= t('dictionary.maintenance') %></span>&nbsp;&nbsp;<% end %>
        <% if action_name.in?(%w(show)) %><span>log_call=<!-- log_call_count --></span>&nbsp;&nbsp;<% end %>
        <% if action_name.in?(%w(show)) %><span>action_call=<!-- action_call_count --></span><% end %>
        <% if action_name.in?(%w(waiting)) %><span class="waiting-debug-info"></span><% end %>
      </p>
    <% end %>
  </div>
</footer>
<% end %>

</body>
</html>
