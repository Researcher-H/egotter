<%=
  if controller_name == 'personality_insights'
    og_image = 'https://d3i5r3jvad5gk5.cloudfront.net/egotter_personality_insight_840x450.jpg?loc=og_image'
  else
    # image_url('/egotter_usagi_840x450.jpg'),
    og_image = 'https://d3i5r3jvad5gk5.cloudfront.net/egotter_usagi_840x450.jpg?loc=og_image'
  end

  if params[:og_tag] == 'false'
    og_tag = {}
  else
    og_tag = {
        title: :title,
        type: (action_name == 'new' ? 'website' : 'article'),
        url: request.original_url,
        image: og_image,
        site_name: t('.title'),
        description: :description,
        locale: 'ja_JP'
    }
  end

  # set default values
  display_meta_tags(
      description: t('.description'),
      title: "#{'[dev] ' if Rails.env.development?}#{t('.title')}",
      og: og_tag
  )
%>
