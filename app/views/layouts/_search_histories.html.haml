.modal.fade.search-modal{'aria-labelledby' => 'search-modal-label', role: 'dialog', tabindex: '-1'}
  .modal-dialog.modal-lg{role: 'document'}
    .modal-content
      .modal-header
        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button'}
          %span{'aria-hidden' => 'true'} Ã—
        %h4#search-modal-label.modal-title= t('searches.common.search_by_egotter')
      .modal-body
        = render partial: 'common/search_form', locals: {via: :search_history_input, screen_names: screen_names_for_search}

        - if user_signed_in?
          .search-histories-header
            %h2
              %small= t('search_histories.index.title')
            .twitter.users
              = render(partial: 'twitter/user', collection: search_histories_list, cached: true, locals: {via: 'search_histories'})
        - else
          = render template: 'login/welcome', locals: {via_prefix: 'search_history_'}