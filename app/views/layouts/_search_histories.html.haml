.modal.fade.search-modal{'aria-labelledby' => 'search-modal-label', role: 'dialog', tabindex: '-1'}
  .modal-dialog.modal-lg{role: 'document'}
    .modal-content
      .modal-header
        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button'}
          %span{'aria-hidden' => 'true'} Ã—
        %h4#search-modal-label.modal-title= t('searches.common.search_by_egotter')
      .modal-body
        = render partial: 'common/search_form', locals: {via: :search_history_input}

        .search-histories-header
          %h2
            %small= t('search_histories.index.title')
          .twitter.users
            - histories = user_signed_in? ? SearchHistory.latest(user_id: current_user_id) : SearchHistory.latest(session_id: session[:fingerprint])
            = render(partial: 'twitter/user', collection: histories, cached: true, locals: {via: 'search_histories'})