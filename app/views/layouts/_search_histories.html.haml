.modal.fade.search-modal{'aria-labelledby' => 'search-modal-label', role: 'dialog', tabindex: '-1'}
  .modal-dialog.modal-lg{role: 'document'}
    .modal-content
      .modal-header
        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button'}
          %span{'aria-hidden' => 'true'} Ã—
        %h4#search-modal-label.modal-title.text-center= t('searches.common.search_by_egotter')
      .modal-body
        = render partial: 'common/search_form', locals: {via: :search_history_input}
        .text-muted.text-right{style: 'margin-top: 5px;'}
          = t('search_histories.remaining_count_is_html', count: search_histories_remaining)
          - unless user_signed_in?
            = t('search_histories.increase_count_html', url: sign_in_path(via: "#{controller_name}/#{action_name}/increase_count"))

        .search-histories-header
          %h2.text-center
            %small= t('search_histories.index.title')
          .twitter.users.row
            = render(partial: 'twitter/user', collection: latest_search_histories, cached: true, locals: {ad: false, via: 'search_histories'}) unless from_crawler?
