.share-buttons
  .inner
    - tweet_text = t('relationships.show.tweet', user1: twitter_users[0].mention_name, user2: twitter_users[1].mention_name, conversations: twitter_users[0].conversations(twitter_users[1]).size, common_friends: twitter_users[0].common_friends(twitter_users[1]).size, common_followers: twitter_users[0].common_followers(twitter_users[1]).size)
    - text = ".#{tweet_text} #egotter #CommonFriends #{relationship_url(src_screen_name: twitter_users[0].screen_name, dst_screen_name: twitter_users[1].screen_name, type: type)}"
    = render partial: 'twitter/tweet_button', locals: {text: text}

%ul.nav.nav-tabs.nav-justified{role: 'tablist'}
  %li.nav-item{class: ('active' if type == 'conversations')}
    %a.nav-link{href: '#conversations', role: 'tab', 'data-toggle' => 'tab'}
      = t('searches.conversations.num', num: twitter_users[0].conversations(twitter_users[1]).size).html_safe
  %li.nav-item{class: ('active' if type == 'common_friends')}
    %a.nav-link{href: '#common-friends', role: 'tab', 'data-toggle' => 'tab'}
      = t('searches.common_friends.num', num: twitter_users[0].common_friends(twitter_users[1]).size).html_safe
  %li.nav-item{class: ('active' if type == 'common_followers')}
    %a.nav-link{href: '#common-followers', role: 'tab', 'data-toggle' => 'tab'}
      = t('searches.common_followers.num', num: twitter_users[0].common_followers(twitter_users[1]).size).html_safe

.tab-content.relationships
  #conversations.twitter.tweets.tab-pane{role: 'tabpanel', class: ('active' if type == 'conversations')}
    .loading-image.text-center= image_tag '/ajax-loader.gif'
  #common-friends.twitter.users.tab-pane{role: 'tabpanel', class: ('active' if type == 'common_friends')}
    .loading-image.text-center= image_tag '/ajax-loader.gif'
  #common-followers.twitter.users.tab-pane{role: 'tabpanel', class: ('active' if type == 'common_followers')}
    .loading-image.text-center= image_tag '/ajax-loader.gif'

.shown-later{style: 'display: none;'}
  .relationships.lead= t('relationships.show.lead_003', user1: twitter_users[0].mention_name, user2: twitter_users[1].mention_name).html_safe
  = render partial: 'relationships/search_form', locals: {via: 'relationships/show/bottom_input'}
  = render(partial: 'common/adsense', locals: {action: action_name, vertical: :bottom})
  .relationships.lead= t('relationships.show.lead_004')
  = link_to t('searches.common.search_xxx_by_egotter', user: twitter_users[0].mention_name), searches_path(screen_name: twitter_users[0].screen_name, via: "#{controller_name}/#{action_name}/bottom_button"), class: 'btn btn-info btn-block', style: 'margin-bottom: 15px;', method: :post

:javascript
  $(function () {
    var url = "#{relationship_path(src_screen_name: twitter_users[0].screen_name, dst_screen_name: twitter_users[1].screen_name, type: 'TYPE', format: :json)}";
    var type = "#{type.gsub(/_/, '-')}";

    $('a[href="#conversations"]').on('click', {url: url}, tabClicked);
    $('a[href="#common-friends"]').on('click', {url: url}, tabClicked);
    $('a[href="#common-followers"]').on('click', {url: url}, tabClicked);

    $('a[href="#' + type + '"]').trigger('click');
  });