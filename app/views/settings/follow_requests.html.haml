%h2.h4.text-center= t('.title')
%table.follow-requests.table.table-condensed.table-responsive.borderless
  %tr
    %th= FollowRequest.human_attribute_name(:uid)
    %th= FollowRequest.human_attribute_name(:error_class)
    %th= FollowRequest.human_attribute_name(:created_at)
    %th= FollowRequest.human_attribute_name(:finished_at)
  - @requests.each do |req|
    %tr
      %td= req.uid
      %td= req.error_class.split('::')[-1]
      %td= req.created_at.to_s(:db)
      %td= req.finished_at&.to_s(:db)
