.share-buttons
  .inner
    - tweet_text = t('conversations.show.tweet', user: twitter_user.mention_name, replying: twitter_user.replying.size, replied: twitter_user.replied(login_user: current_user).size, replying_and_replied: twitter_user.replying_and_replied(login_user: current_user).size)
    - text = ".#{tweet_text} #egotter #{conversation_url(screen_name: twitter_user.screen_name, type: type)}"
    = render partial: 'twitter/tweet_button', locals: {text: text}

%ul.nav.nav-tabs.nav-justified{role: 'tablist'}
  %li.nav-item{class: ('active' if type == 'replying')}
    %a.nav-link{href: '#replying', role: 'tab', 'data-toggle' => 'tab'}
      = t('searches.replying.num', num: twitter_user.replying.size).html_safe
  %li.nav-item{class: ('active' if type == 'replied')}
    %a.nav-link{href: '#replied', role: 'tab', 'data-toggle' => 'tab'}
      = t('searches.replied.num', num: twitter_user.replied(login_user: current_user).size).html_safe
  %li.nav-item{class: ('active' if type == 'replying_and_replied')}
    %a.nav-link{href: '#replying-and-replied', role: 'tab', 'data-toggle' => 'tab'}
      = t('searches.replying_and_replied.num', num: twitter_user.replying_and_replied(login_user: current_user).size).html_safe

.tab-content.conversations.twitter.users
  #replying.tab-pane{role: 'tabpanel', class: ('active' if type == 'replying')}
    .loading-image.text-center= image_tag '/ajax-loader.gif'
  #replied.tab-pane{role: 'tabpanel', class: ('active' if type == 'replied')}
    .loading-image.text-center= image_tag '/ajax-loader.gif'
  #replying-and-replied.tab-pane{role: 'tabpanel', class: ('active' if type == 'replying_and_replied')}
    .loading-image.text-center= image_tag '/ajax-loader.gif'

.shown-later{style: 'display: none;'}
  .conversations.lead= t('conversations.show.lead_003', user: twitter_user.mention_name).html_safe
  = render partial: 'common/search_form', locals: {via: 'conversations/show/bottom_input'}
  = render(partial: 'common/adsense', locals: {action: action_name, vertical: :bottom})
  .conversations.lead= t('conversations.show.lead_004')
  = link_to t('searches.common.search_xxx_by_egotter', user: twitter_user.mention_name), searches_path(screen_name: twitter_user.screen_name, via: "#{controller_name}/#{action_name}/bottom_button"), class: 'btn btn-info btn-block', style: 'margin-bottom: 15px;', method: :post

:javascript
  $(function () {
    var url = "#{conversation_path(screen_name: twitter_user.screen_name, type: 'TYPE', format: :json)}";
    var type = "#{type.gsub(/_/, '-')}";

    $('a[href="#replying"]').on('click', {url: url}, tabClicked);
    $('a[href="#replied"]').on('click', {url: url}, tabClicked);
    $('a[href="#replying-and-replied"]').on('click', {url: url}, tabClicked);

    $('a[href="#' + type + '"]').trigger('click');
  });
