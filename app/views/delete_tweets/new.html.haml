- title t('.plain_title')
- set_meta_tags description: t('.description')

#delete-tweets.text-center
  .vertical-spacing
  %h2.h4= t('.simple_title')
  .vertical-spacing

  .lead= t('.text001_html')

  = image_tag '/egotter_trash_with_text_400x448.png', class: 'img-rounded', height: '160px'
  .vertical-spacing

  .btn-width-wrapper
    - if user_signed_in?
      - if @processing
        %a.btn.btn-default.btn-block{href: delete_tweets_path(via: build_via('check_progress'))}= t('.see_progress')
        .text-muted.notes.text-right= t('.requested')
      - else
        .btn.btn-danger.btn-block.delete-tweets-btn{"data-target" => "#delete-tweets-modal", "data-toggle" => "modal"}= t('.delete_tweets')
        .text-right.search-count-wrapper{style: 'visibility: hidden;'}
          %i.fas.fa-check.egotter-pink
          %span.egotter-pink= t('searches.new.pc.check_004_html')

    - else
      = sign_in_with_twitter_link(delete_tweets_path, 'button', class: 'btn btn-primary btn-block')
      .text-right
        %i.fas.fa-check.egotter-pink
        %span.egotter-pink= t('searches.new.pc.check_002')
      .text-right.search-count-wrapper{style: 'visibility: hidden;'}
        %i.fas.fa-check.egotter-pink
        %span.egotter-pink= t('searches.new.pc.check_004_html')

