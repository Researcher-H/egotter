<div class="audience-insight-on-timeline p-3 p-lg-5">
  <h3 class="text-center"><%= t('timelines.feeds.audience_insights.title') %></h3>
  <div class="text-center my-3"><%= t('timelines.feeds.audience_insights.description', user: twitter_user.screen_name, friends: twitter_user.friends_count, followers: twitter_user.followers_count) %></div>
  <div class="chart-container"></div>
  <div class="text-center mt-3">
    <%= link_to t('timelines.feeds.view_more'), audience_insight_path(twitter_user), class: 'btn btn-primary btn-block' %>
  </div>
</div>

<script type=text/javascript>
  $(function () {
    var friends = <%= raw audience_insight.chart_data(:friends).to_json %>;
    var followers = <%= raw audience_insight.chart_data(:followers).to_json %>;
    var series = [
      {name: 'friends', color: '#058DC7', data: friends},
      {name: 'followers', color: '#ED561B', data: followers, yAxis: 1}
    ];
    new AudienceInsight().drawChart($('.audience-insight-on-timeline .chart-container')[0], series);
  });
</script>
