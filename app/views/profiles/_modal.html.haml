%div{"aria-labelledby" => "profile-overview-modal-label", class: "modal fade profile-overview-modal #{user.uid}", role: 'dialog', tabindex: '-1'}
  .modal-dialog{role: 'document'}
    .modal-content
      .modal-header
        %button.close{"aria-label" => 'Close', "data-dismiss" => 'modal', type: 'button'}
          %span{"aria-hidden" => 'true'} Ã—
        %h4#profile-overview-modal-label.modal-title= t('searches.common.search_by_egotter')
      .modal-body{style: 'padding: 0;'}
        = render(partial: 'profiles/overview', locals: {user: user, unique_id: user.uid})
        %div{style: 'margin: 15px;'}
          = link_to t('searches.common.search_by', user: mention_name(user.screen_name)), searches_path_for(controller: controller, screen_name: user.screen_name, via: via), class: 'btn btn-info btn-block', method: :post
        %div{style: 'margin: 15px;'}
          = link_to t('searches.common.search_a_and_b', user1: twitter_user.mention_name, user2: user.mention_name), relationships_path(src_screen_name: twitter_user.screen_name, dst_screen_name: user.screen_name, type: 'conversations', via: via), class: 'btn btn-info btn-block', method: :post