- content_for :canonical_url do
  %link{href: profile_url(@twitter_user), rel: 'canonical'}

- breadcrumb :profile, @twitter_user.screen_name

- page_title = t('profiles.show.page_title', user: @twitter_user.screen_name)
- title page_title
- set_meta_tags description: t('profiles.show.meta_description', user: @twitter_user.screen_name)

= render(partial: 'adsense/side_by_side', locals: {vertical: :top})

.text-center{style: 'max-width: 600px; margin: 0 auto;'}
  - url = searches_path(screen_name: @twitter_user.screen_name, via: build_via('only_profile_page_button'))
  = link_to t('.see_more', user: @twitter_user.screen_name), url, class: 'btn btn-primary btn-block btn-lg center-block', method: :post
  .vertical-spacing
  = render partial: 'twitter/profile', locals: {user: @twitter_user}

.vertical-spacing
