.share-buttons
  .inner
    - tweet_text = t('one_sided_friends.show.tweet', user: twitter_user.mention_name, one_sided_friends: twitter_user.one_sided_friend_uids.size, one_sided_followers: twitter_user.one_sided_follower_uids.size, mutual_friends: twitter_user.mutual_friend_uids.size)
    - text = ".#{tweet_text} #egotter #OneSidedFriends #{one_sided_friend_url(screen_name: twitter_user.screen_name, type: type)}"
    = render partial: 'twitter/tweet_button', locals: {text: text}

%ul.nav.nav-tabs.nav-justified{role: 'tablist'}
  %li.nav-item{class: ('active' if type == 'one_sided_friends')}
    %a.nav-link{href: '#one-sided-friends', role: 'tab', 'data-toggle' => 'tab'}
      = t('searches.one_sided_friends.num', num: twitter_user.one_sided_friend_uids.size).html_safe
  %li.nav-item{class: ('active' if type == 'one_sided_followers')}
    %a.nav-link{href: '#one-sided-followers', role: 'tab', 'data-toggle' => 'tab'}
      = t('searches.one_sided_followers.num', num: twitter_user.one_sided_follower_uids.size).html_safe
  %li.nav-item{class: ('active' if type == 'mutual_friends')}
    %a.nav-link{href: '#mutual-friends', role: 'tab', 'data-toggle' => 'tab'}
      = t('searches.mutual_friends.num', num: twitter_user.mutual_friend_uids.size).html_safe

.tab-content.one-sided-friends.twitter.users
  #one-sided-friends.tab-pane{role: 'tabpanel', class: ('active' if type == 'one_sided_friends')}
    .loading-image.text-center= image_tag '/ajax-loader.gif'
  #one-sided-followers.tab-pane{role: 'tabpanel', class: ('active' if type == 'one_sided_followers')}
    .loading-image.text-center= image_tag '/ajax-loader.gif'
  #mutual-friends.tab-pane{role: 'tabpanel', class: ('active' if type == 'mutual_friends')}
    .loading-image.text-center= image_tag '/ajax-loader.gif'

.shown-later{style: 'display: none;'}
  .one-sided-friends.lead= t('one_sided_friends.show.lead_003', user: twitter_user.mention_name).html_safe
  = render partial: 'common/search_form', locals: {via: 'one_sided_friends/show/bottom_input'}
  = render(partial: 'common/adsense', locals: {action: action_name, vertical: :bottom})
  .one-sided-friends.lead= t('one_sided_friends.show.lead_004')
  = link_to t('searches.common.search_xxx_by_egotter', user: twitter_user.mention_name), searches_path(screen_name: twitter_user.screen_name, via: "#{controller_name}/#{action_name}/bottom_button"), class: 'btn btn-info btn-block', style: 'margin-bottom: 15px;', method: :post

:javascript
  $(function () {
    var url = "#{one_sided_friend_path(screen_name: twitter_user.screen_name, type: 'TYPE', format: :json)}";
    var type = "#{type.gsub(/_/, '-')}";

    $('a[href="#one-sided-friends"]').on('click', {url: url}, tabClicked);
    $('a[href="#one-sided-followers"]').on('click', {url: url}, tabClicked);
    $('a[href="#mutual-friends"]').on('click', {url: url}, tabClicked);

    $('a[href="#' + type + '"]').trigger('click');
  });