- if user_signed_in?
  %div{style: 'margin-bottom: 15px;'}= t('after_sign_in.empty_and_sign_in_and_too_many_friends', user: twitter_user.mention_name, kaomoji: Kaomoji.unhappy).html_safe
- else
  - redirect_path = one_sided_friend_path(screen_name: twitter_user.screen_name)
  %div{style: 'margin-bottom: 15px;'}= t('before_sign_in.empty_and_anonymous_and_many_friends', user: twitter_user.mention_name, sign_in_link: link_to(t('dictionary.sign_in'), welcome_path(redirect_path: redirect_path)), kaomoji: Kaomoji.happy).html_safe
  = link_to t('login.welcome.sign_in_with_twitter'), welcome_path(redirect_path: redirect_path), class: 'btn btn-info btn-block', style: 'margin-bottom: 15px;'