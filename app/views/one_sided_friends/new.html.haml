- title @title
- set_meta_tags description: t('one_sided_friends.new.description')

%h3.h4.one-sided-friends.text-center= t('one_sided_friends.new.lead_001')
.one-sided-friends.lead.text-center= t('one_sided_friends.new.lead_002').html_safe
.one-sided-friends.lead.text-center= t('one_sided_friends.new.lead_003').html_safe

= render partial: 'common/search_form', locals: {via: build_via('top_input')}
= render(partial: 'adsense/side_by_side', locals: {vertical: :top})

- if user_signed_in?
  = render partial: 'common/search_button', locals: {screen_name: current_user.screen_name, via: build_via('top_button')}
- else
  = sign_in_with_twitter_link(one_sided_friends_top_path, 'button', class: 'btn btn-info btn-block')

.row.one-sided-friends.screenshot
  .col-xs-12.col-sm-6.text-center
    %img{alt: "#{t('searches.common.egotter')}", src: image_path('/screenshot_iphone_332x560.png'), height: '160px'}
  .col-xs-12.col-sm-6.text-center
    %img{alt: "#{t('searches.common.egotter')}", src: image_path('/screenshot_laptop_961x560.png'), height: '160px'}

.one-sided-friends.separator

#public-tweets-wrapper.twitter.tweets.center-block
:javascript
  $(function () {
    Home.setPublicTweets('#{load_public_tweets_path}', '#public-tweets-wrapper');
  });

.one-sided-friends.lead.in-top-page.text-center= t('one_sided_friends.new.lead_004').html_safe