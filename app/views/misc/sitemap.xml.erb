<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc>http://egotter.com/</loc>
    <lastmod><%= l(Time.zone.now, format: :date_hyphen) %></lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>
  <% @records.each do |log| %>
    <url>
      <loc><%= search_url(screen_name: log.screen_name, id: log.uid) %></loc>
      <lastmod><%= l(log.created_at.in_time_zone('Tokyo'), format: :date_hyphen) %></lastmod>
      <changefreq>hourly</changefreq>
      <priority>0.8</priority>
    </url>
  <% end %>
</urlset>