#!/bin/sh

if [ -f /etc/init.d/functions ]; then
  . /etc/init.d/functions
fi

if echo ' \c' | grep 'c' >/dev/null 2>&1; then
  en='-n'
  ec=''
else
  en=''
  ec='\c'
fi

APP_ROOT="/var/egotter/"

start() {
  /etc/init.d/puma start || echo 'Already started'
  /etc/init.d/sidekiq start || echo 'Already started'
  /etc/init.d/sidekiq_import start || echo 'Already started'
  /etc/init.d/sidekiq_misc start || echo 'Already started'
  /etc/init.d/sidekiq_prompt_reports start || echo 'Already started'
}

stop() {
  /etc/init.d/puma stop || echo 'Not running'
  /etc/init.d/sidekiq stop || echo 'Not running'
  /etc/init.d/sidekiq_import stop || echo 'Not running'
  /etc/init.d/sidekiq_misc stop || echo 'Not running'
  /etc/init.d/sidekiq_prompt_reports stop || echo 'Not running'
}

restart() {
  /etc/init.d/puma status && /etc/init.d/puma restart || echo 'Not running'
  /etc/init.d/sidekiq status && /etc/init.d/sidekiq restart || echo 'Not running'
  /etc/init.d/sidekiq_import status && /etc/init.d/sidekiq_import restart || echo 'Not running'
  /etc/init.d/sidekiq_misc status && /etc/init.d/sidekiq_misc restart || echo 'Not running'
  /etc/init.d/sidekiq_prompt_reports status && /etc/init.d/sidekiq_prompt_reports restart || echo 'Not running'
}

rh_status() {
  cmd1=":"
  if ls ${APP_ROOT}/tmp/pids/puma.pid >/dev/null 2>&1; then
    cmd1="ps x -o pid,command | grep puma | grep -v grep"
  fi

  cmd2=":"
  if ls ${APP_ROOT}/tmp/pids/sidekiq*.pid >/dev/null 2>&1; then
    cmd2='ps -o pid=,command= -p$(cat ${APP_ROOT}tmp/pids/sidekiq*.pid)'
  fi

  sh -c "cd $APP_ROOT && ${cmd1} ; ${cmd2}"
}

case "$1" in
start)
  start
  ;;
stop)
  stop
  ;;
restart)
  restart
  ;;
status)
  rh_status
  ;;
*)
  echo "Usage: egotter {restart|status}" >&2
  exit 2
  ;;
esac
