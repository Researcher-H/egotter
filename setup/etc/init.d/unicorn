# /etc/init.d/unicorn

if [ -f /etc/init.d/functions ]; then
  . /etc/init.d/functions
fi

if echo ' \c' | grep 'c' > /dev/null 2>&1; then
  en='-n'
  ec=''
else
  en=''
  ec='\c'
fi

APP_ROOT="/home/ec2-user/egotter/"
USER="ec2-user"
RAILS_ENV="production"
NAME=unicorn
PID_FILE="${APP_ROOT}tmp/pids/${NAME}.pid"
OLD_PID_FILE="${APP_ROOT}tmp/pids/${NAME}.pid.oldbin"
CONFIG_FILE="${APP_ROOT}config/${NAME}.rb"

print_pid() {
  cat ${PID_FILE}
}

print_old_pid() {
  cat ${OLD_PID_FILE}
}

print_command() {
  ps -o command= -p $(print_pid)
}

start() {
  sudo -u ${USER} -H bash -l -c "cd $APP_ROOT && bundle exec unicorn_rails -c ${CONFIG_FILE} -E ${RAILS_ENV} -D"
  echo ${en} "Starting $NAME: ${ec}"
  success
  echo
}

stop() {
  sudo kill -QUIT $(print_pid)
  echo ${en} "Stopping $NAME: ${ec}"
  success
  echo
}

restart() {
  sudo kill -USR2 $(print_pid)
  while [ ! -f ${PID_FILE} -o ! -f ${OLD_PID_FILE} ]; do
    sleep 2
  done

  until [ $(pgrep -P $(print_pid) | wc -l | awk '{print $1}') -gt 2 ]; do
    sleep 2
  done

  sudo kill -WINCH $(print_old_pid)
  while [ $(pgrep -P $(print_old_pid) | wc -l | awk '{print $1}') -gt 1 ]; do
    sudo kill -TTOU $(print_old_pid)
    sleep 2
  done

  sudo kill -QUIT $(print_old_pid)

  echo ${en} "Restarting $NAME: ${ec}"
  success
  echo
}

rh_status() {
  [ -f ${PID_FILE} ] && print_command
  status -p ${PID_FILE} ${NAME}
}

case "$1" in
  start)
          if [ -f ${PID_FILE} ]; then
            echo "unicorn is already running on PID:$(print_pid)"
          else
            start
          fi
          ;;
  stop)
          if [ -f ${PID_FILE} ]; then
            stop
          else
            echo "unicorn is stopped .."
          fi
          ;;
  restart)
          if [ -f ${PID_FILE} ]; then
            restart
          else
            echo "unicorn is not running .."
            start
          fi
          ;;
  status)
          rh_status
          ;;
  *)
          echo "Usage: unicorn {start|stop|restart|status}" >&2
          exit 1
          ;;
esac
exit 0

